{% extends 'BaseLayout.twig' %}

{% block title %}
    Add New User
{% endblock %}

{% block content %}



<div class="card"  style="width: 21rem; position: relative; left: 40%; top: 30%;">
    <div class="card-body">
    <form name="add_form" id="add_form" method="POST">
    <div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" id="myName" name="name_form"  placeholder="Name" value=""/>
    </div>

    <div class="form-group">
    <label for="Email">Email</label>
    <input type="text" class="form-control" id="myEmail" name="email_form"  placeholder="Email" value=""/>
    </div>

    <div class="form-group">
    <label for="Password">Password</label>
    <input type="password" class="form-control" id="myPassword" name="password_form"  placeholder="Password" value=""/>
    </div>

    <div class="form-group">
    <label for="Admin">Admin</label> 
    <select class="form-control" id="myAdmin" name="admin_form" value=""> 
        <option>True</option>
        <option>False</option>
    </select>   
    {% if (Errors != []) %}
    {% for error in Errors %}
    <label>{{ error}} </label><br>
    {% endfor %}
    {% endif %}
    </div>
       
   

    <input type="submit" class="btn btn-success" id="myAddButton" name="add" value="Add"/>
 
    </form>
</div>
</div>
       
{% endblock %}