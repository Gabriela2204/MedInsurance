<html>

<head>
    <link rel="stylesheet" href="src/Layouts/BaseLayout.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
<nav class="title sticky-top navbar-inverse navbar-fixed-top" style="text-align :center">
  <h1> Login </h1>
</nav>


{% block content %}
<div class="card"  style="width: 21rem; position: relative; left: 40%; top: 30%;">
    <div class="card-body"> 
    <div class="form-group">
      <form name="login_form" id="login_form" method="post">
        
      <div class="form-group">
          <label for="Email">Email</label>
          <input type="text" class="form-control" id="myEmail" name="Email_form"  placeholder="Email" value=""/>
      </div>

      <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="myPassword" name="Password_form"  placeholder="Password" value=""/>
      <br><br>
      {% for error in Errors %}
    <label>{{ error}} </label><br>
    {% endfor %}
      </div>

    <input type="submit" class="btn btn-success" id="myLoginButton" name="Login" value="Login"/>
  </form>
 
</div>
</div>
{% endblock %}

</body>
</html>